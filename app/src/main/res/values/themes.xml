<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NkhukuManagement" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.NkhukuManagement.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="android:windowBackground">@drawable/logo_app</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.NkhukuManagement</item>
    </style>
    <style name="AppTextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <!-- Customize text appearance for light mode -->
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <!-- Add any other attributes you want to customize for light mode -->
    </style>
</resources>